@model TvcDay07EF.Models.LoaiSanPham

@{
    ViewData["Title"] = "Create";
}

<h1 class="mb-4">Thêm mới loại sản phẩm</h1>

<div class="row">
    <div class="col-md-6">
        <div class="card shadow-sm">
            <div class="card-header bg-primary text-white">
                Thông tin loại sản phẩm
            </div>
            <div class="card-body">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="mb-3">
                        <label asp-for="MaLoai" class="form-label"></label>
                        <input asp-for="MaLoai" class="form-control" />
                        <span asp-validation-for="MaLoai" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="TenLoai" class="form-label"></label>
                        <input asp-for="TenLoai" class="form-control" />
                        <span asp-validation-for="TenLoai" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="TrangThai" class="form-label"></label>
                        <div>
                            <label class="me-3">
                                <input type="radio" asp-for="TrangThai" value="1" />
                                <span class="text-success">Hoạt động</span>
                            </label>
                            <label>
                                <input type="radio" asp-for="TrangThai" value="0" />
                                <span class="text-danger">Không hoạt động</span>
                            </label>
                        </div>
                        <span asp-validation-for="TrangThai" class="text-danger"></span>
                    </div>

                    <div class="d-flex justify-content-between">
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-save"></i> Ghi lại
                        </button>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> Quay lại
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
