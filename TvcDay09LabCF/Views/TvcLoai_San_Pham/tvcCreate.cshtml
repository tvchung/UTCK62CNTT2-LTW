@model TvcDay09LabCF.Models.TvcLoai_San_Pham
@{
    ViewData["Title"] = "Thêm mới loại sản phẩm";
}

<h1 class="mb-4 text-primary fw-bold text-uppercase">
    <i class="fa-solid fa-plus-circle me-2"></i> @ViewData["Title"]
</h1>

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow-lg border-0">
            <div class="card-header bg-primary text-white fw-semibold">
                <i class="fa-solid fa-pen-to-square me-2"></i> Nhập thông tin loại sản phẩm
            </div>
            <div class="card-body">
                <form asp-action="tvcCreate">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="mb-3">
                        <label asp-for="tvcMaLoai" class="form-label fw-semibold"></label>
                        <input asp-for="tvcMaLoai" class="form-control" placeholder="Nhập mã loại sản phẩm..." />
                        <span asp-validation-for="tvcMaLoai" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="tvcTenLoai" class="form-label fw-semibold"></label>
                        <input asp-for="tvcTenLoai" class="form-control" placeholder="Nhập tên loại sản phẩm..." />
                        <span asp-validation-for="tvcTenLoai" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-semibold d-block">Trạng thái</label>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" asp-for="tvcTrangThai" value="true" checked />
                            <label class="form-check-label text-success fw-semibold">
                                <i class="fa-solid fa-circle-check me-1"></i> Hoạt động
                            </label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" asp-for="tvcTrangThai" value="false" />
                            <label class="form-check-label text-danger fw-semibold">
                                <i class="fa-solid fa-circle-xmark me-1"></i> Ngừng hoạt động
                            </label>
                        </div>
                    </div>

                    <div class="mt-4 d-flex justify-content-between">
                        <a asp-action="tvcIndex" class="btn btn-secondary">
                            <i class="fa-solid fa-arrow-left me-1"></i> Quay lại
                        </a>
                        <button type="submit" class="btn btn-success">
                            <i class="fa-solid fa-floppy-disk me-1"></i> Ghi lại
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
