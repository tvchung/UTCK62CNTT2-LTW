@model TvcDay09LabCF.Models.TvcLoai_San_Pham

@{
    ViewData["Title"] = "Xóa loại sản phẩm";
}

<h1 class="mb-4 text-danger fw-bold text-uppercase">
    <i class="fa-solid fa-trash-can me-2"></i> @ViewData["Title"]
</h1>

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow-lg border-0">
            <div class="card-header bg-danger text-white fw-semibold">
                <i class="fa-solid fa-triangle-exclamation me-2"></i> Xác nhận xóa loại sản phẩm
            </div>

            <div class="card-body">
                <div class="alert alert-warning d-flex align-items-center" role="alert">
                    <i class="fa-solid fa-circle-exclamation me-2 fa-lg"></i>
                    <div>
                        Bạn có chắc chắn muốn <strong>xóa</strong> loại sản phẩm này không?  
                        <br />Hành động này không thể hoàn tác!
                    </div>
                </div>

                <dl class="row mb-0">
                    <dt class="col-sm-4 text-end text-secondary fw-semibold">
                        @Html.DisplayNameFor(model => model.tvcMaLoai)
                    </dt>
                    <dd class="col-sm-8 fw-bold text-dark">
                        @Html.DisplayFor(model => model.tvcMaLoai)
                    </dd>

                    <dt class="col-sm-4 text-end text-secondary fw-semibold">
                        @Html.DisplayNameFor(model => model.tvcTenLoai)
                    </dt>
                    <dd class="col-sm-8 fw-bold text-dark">
                        @Html.DisplayFor(model => model.tvcTenLoai)
                    </dd>

                    <dt class="col-sm-4 text-end text-secondary fw-semibold">
                        @Html.DisplayNameFor(model => model.tvcTrangThai)
                    </dt>
                    <dd class="col-sm-8">
                        @if (Model.tvcTrangThai)
                        {
                            <span class="badge bg-success px-3 py-2">
                                <i class="fa-solid fa-check-circle me-1"></i> Hoạt động
                            </span>
                        }
                        else
                        {
                            <span class="badge bg-danger px-3 py-2">
                                <i class="fa-solid fa-xmark-circle me-1"></i> Ngừng hoạt động
                            </span>
                        }
                    </dd>
                </dl>
            </div>

            <div class="card-footer bg-light d-flex justify-content-between">
                <a asp-action="tvcIndex" class="btn btn-secondary">
                    <i class="fa-solid fa-arrow-left me-1"></i> Quay lại
                </a>
                <form asp-action="tvcDelete" method="post" onsubmit="return confirm('Bạn có chắc chắn muốn xóa loại sản phẩm này không?');">
                    <input type="hidden" asp-for="tvcId" />
                    <button type="submit" class="btn btn-danger fw-semibold">
                        <i class="fa-solid fa-trash-can me-1"></i> Xóa ngay
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

