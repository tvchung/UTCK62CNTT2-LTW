@model IEnumerable<TvcDay09LabCF.Models.TvcLoai_San_Pham>

@{
    ViewData["Title"] = "Danh sách loại sản phẩm";
}

<div class="d-flex justify-content-between align-items-center mb-4 bg-info">
    <h1 class="text-primary fw-bold text-uppercase m-0">
        <i class="fa-solid fa-layer-group me-2"></i> @ViewData["Title"]
    </h1>
    <a asp-action="tvcCreate" class="btn btn-success shadow-sm">
        <i class="fa-solid fa-plus-circle me-1"></i> Thêm mới
    </a>
</div>

<div class="card shadow-sm border-0">
    <div class="card-body p-0">
        <table class="table table-hover table-bordered align-middle mb-0">
            <thead class="table-primary text-center">
                <tr>
                    <th style="width: 15%">@Html.DisplayNameFor(model => model.tvcMaLoai)</th>
                    <th style="width: 40%">@Html.DisplayNameFor(model => model.tvcTenLoai)</th>
                    <th style="width: 20%">@Html.DisplayNameFor(model => model.tvcTrangThai)</th>
                    <th style="width: 25%">Thao tác</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    foreach (var item in Model)
                    {
                        <tr>
                            <td class="text-center fw-semibold">@item.tvcMaLoai</td>
                            <td>@item.tvcTenLoai</td>
                            <td class="text-center">
                                @if (item.tvcTrangThai)
                                {
                                    <span class="badge bg-success px-3 py-2">
                                        <i class="fa-solid fa-circle-check me-1"></i> Hoạt động
                                    </span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary px-3 py-2">
                                        <i class="fa-solid fa-circle-xmark me-1"></i> Ngừng
                                    </span>
                                }
                            </td>
                            <td class="text-center">
                                <div class="btn-group" role="group">
                                    <a asp-action="tvcDetails" asp-route-tvcId="@item.tvcId" class="btn btn-sm btn-outline-info" title="Xem chi tiết">
                                        <i class="fa-solid fa-circle-info"></i>
                                    </a>
                                    <a asp-action="tvcEdit" asp-route-tvcId="@item.tvcId" class="btn btn-sm btn-outline-warning" title="Chỉnh sửa">
                                        <i class="fa-solid fa-pen-to-square"></i>
                                    </a>
                                    <a asp-action="tvcDelete" asp-route-tvcId="@item.tvcId" class="btn btn-sm btn-outline-danger" title="Xóa"
                                       onclick="return confirm('Bạn có chắc muốn xóa loại sản phẩm này không?')">
                                        <i class="fa-solid fa-trash-can"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="4" class="text-center text-muted py-5">
                            <i class="fa-solid fa-inbox fa-2x mb-2 d-block"></i>
                            Không có dữ liệu để hiển thị
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
